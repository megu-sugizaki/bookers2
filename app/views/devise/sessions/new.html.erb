<!--Log inページ-->
<div class="continer">
  <div class="row ml-3 mt-3">
      <div class="col-md-1.5">

        <h2>Log in</h2>
        
        <%= form_with model: @user, url: user_session_path do |f| %>
        
          <div class="form-group">
          <div class="field">
            <label for="user_name">Name</label>
            <br>
            <%= f.text_field :name, autofocus: true, class:"form-control", id:"user_name" %>
          </div>
          </div>
          
          <div class="form-group">
          <div class="field">
            <label for="user_password">Password</label>  
            <br>
            <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword" %>
          </div>
          </div>
          
          <div class="form-group">
          <div class="field">
            <input name="user[remember_me" type="hidden" value="0" autocomplete="off">
            <input type="checkbox" value="1" name="user[remember_m" id="user_remember_me">
            <label for="user_remember_me">Remember me</label>
          </div>
          </div>
          
          <div class="actions">
            <%= f.submit "Log in", class: "btn btn-sm btn-primary" %>
          </div>
        <% end %>
        
        <%= render "devise/shared/links" %>
        
    </div>
  </div>
</div>

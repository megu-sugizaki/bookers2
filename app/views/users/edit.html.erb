<% if @user.errors.any? %>
  <%= @user.errors.count %> errors prohibited this obj from being saved:
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
        <h1>User info</h1>
        
        <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label>
          <%= f.text_field :name, class:"form-control", id:"user_name" %>
        </div>
        
          <p>Image</p>
          <%= f.file_field :profile_image, accept: "image/*" %>
        
        <div class="form-group mt-3">
          <label for="user_introduction">Introduction</label>
          <%= f.text_field :introduction, class:"form-control", id:"puser_introduction" %>
        </div>
        
        <div class="actions">
          <%= f.submit "Update User", class:"btn btn-sm btn-secondary" %>
        </div>
        
        <% end %>
    </div>
  </div>
</div>

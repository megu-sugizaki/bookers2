<!--Usersの左側部分-->
<div class="container px-5 px-sm-0">
 <div class="row">    
    <div class="col-md-3">
      <!--users indexのuser info-->
        <h2>User info</h2>
        <%= image_tag current_user.get_profile_image(100,100) %>
        <table class="table table-hover table-inverse">
            <tr>
                <th>name</th>
                <td><strong><%= current_user.name %></strong></td>
            </tr>
            <tr>
                <th>introduction</th>
                <td><strong><%= current_user.introduction %></strong></td>
            </tr>
        </table>
        
        <div class="row">
        <%= link_to edit_user_path(current_user), class: 'btn btn-outline-secondary btn-block' do %>
            <i class="fas fa-user-cog"></i>
        <% end %>
        </div>
        
        <!--users show共通化部分(new book)-->
        <%= render 'list', book: @book %>
        
    </div>

<!--Users右側部分-->
<div class="col-md-8 offset-md-1">
    <h3>Users</h3>
    <table class="table table-hover table-inverse">
        <thead>
            <tr>
              <th><strong>image</strong></th>
              <th><strong>name</strong></th>
              <th> </th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td>
                       <%= image_tag user.get_profile_image(100,100) %>
                    </td>
                    <td>
                       <%= link_to user.name, user_path(user.id) %>
                    </td>
                    <td>
                       <%= link_to "Show", user_path(user.id)  %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
        
  </div>
 </div>    
</div>